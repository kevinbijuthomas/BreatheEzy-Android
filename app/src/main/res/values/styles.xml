<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--====================== ToolBar Theme ======================-->
    <style name="ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <!--====================== Button Theme ======================-->
    <!--Primary button theme-->
    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fb_radius">10dp</item>
    </style>

    <!--Ok button theme-->
    <style name="OkButtonTheme" parent="ButtonPrimary">
        <!--<item name="pressed_color">@color/colorPrimaryDark</item>-->
        <item name="fb_defaultColor">@color/darkSlateBlue</item>
        <item name="fb_focusColor">@color/almostBlack98</item>
        <item name="fb_textColor">@color/colorWhite</item>
    </style>

    <!--Send button theme-->
    <style name="SubmitButton" parent="ButtonPrimary">
        <item name="fb_defaultColor">@color/colorGreen</item>
        <item name="fb_focusColor">@color/almostBlack98</item>
        <item name="fb_textColor">@color/colorWhite</item>
    </style>

    <!--Cancel button theme-->
    <style name="GrayButton" parent="ButtonPrimary">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <!--FB button theme-->
    <style name="FBButtonTheme" parent="ButtonPrimary">
        <!--<item name="pressed_color">@color/colorPrimaryDark</item>-->
        <item name="fb_defaultColor">@color/okButtonColor</item>
        <item name="fb_focusColor">@color/almostBlack98</item>
        <item name="fb_textColor">@color/colorWhite</item>
    </style>

    <!--Google+ button theme-->
    <style name="GoogleButtonTheme" parent="ButtonPrimary">
        <!--<item name="pressed_color">@color/colorPrimaryDark</item>-->
        <item name="fb_defaultColor">@color/dullRed</item>
        <item name="fb_focusColor">@color/almostBlack98</item>
        <item name="fb_textColor">@color/colorWhite</item>
    </style>

    <!--Flat button theme-->
    <style name="ButtonFlatPrimary" parent="Widget.AppCompat.Button">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="EditTextTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>